<div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Beneficiários</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="beneficiarioId" value="0" />
                <div class="form-group">
                    <label for="cpfBeneficiario">CPF</label>
                    <input type="text" class="form-control" id="cpfBeneficiario" placeholder="999.999.999-99" />
                </div>
                <div class="form-group">
                    <label for="nomeBeneficiario">Nome</label>
                    <input type="text" class="form-control" id="nomeBeneficiario" />
                </div>
                <button type="button" id="btnSalvarBeneficiario" class="btn btn-success">Salvar</button>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>CPF</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyBeneficiarios"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
